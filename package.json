{
  "name": "buenbocado",
  "private": true,
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --check .",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:migrate": "pnpm --filter @buenbocado/db prisma migrate dev",
    "db:studio": "pnpm --filter @buenbocado/db prisma studio"
  },
  "devDependencies": {
    "eslint": "8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "turbo": "^2.1.3",
    "typescript": "^5.5.4"
  },
  "pnpm": {
    "overrides": {
      "eslint": "8.57.0"
    }
  }
}
