root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JS/TS/React/JSON/YAML
[*.{js,jsx,ts,tsx,json,yml,yaml}]
indent_style = space
indent_size = 2

# Markdown: keep trailing whitespace if needed for line breaks
[*.md]
trim_trailing_whitespace = false

# Windows PowerShell scripts
[*.ps1]
end_of_line = crlf
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf
indent_style = space
indent_size = 2